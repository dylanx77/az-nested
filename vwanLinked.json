{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vwanName": {
            "type": "string",
            "metadata": {
                "description": "VNet name"
            }
        },
        "vwanSku": {
            "type": "string",
            "metadata": {
                "description": "Address prefix"
            }
        },
        "hubName": {
            "type": "string",
            "metadata": {
                "description": "Subnet 1 Prefix"
            }
        },
        "hubAddressPrefix": {
            "type": "string",
            "metadata": {
                "description": "Subnet 1 Name"
            }
        },
        "commonSubscriptionId": {
            "type": "string",
            "metadata": {
                "description": "Common subscription ID"
            }
        },
        "commonVnetRgName": {
            "type": "string",
            "metadata": {
                "description": "Common VNET resource group name"
            }
        },
        "commonVnetName": {
            "type": "string",
            "metadata": {
                "description": "Common VNET name"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {
        "commonVnetId": "[concat('subscriptions/', parameters('commonSubscriptionId'), '/resourceGroups/', parameters('commonVnetRgName'), '/providers/Microsoft.Network/virtualNetworks/', parameters('commonVnetName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualWans",
            "name": "[parameters('vwanName')]",
            "apiVersion": "2020-05-01",
            "location": "[parameters('location')]",
            "properties": {
                "type": "[parameters('vwanSku')]",
                "disableVpnEncryption": false,
                "allowBranchToBranchTraffic": true,
                "office365LocalBreakoutCategory": "None"
            }
        },
        {
            "type": "Microsoft.Network/virtualHubs",
            "name": "[parameters('hubName')]",
            "apiVersion": "2020-05-01",
            "location": "[parameters('location')]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualWans/', parameters('vwanName'))]"
            ],
            "properties": {
                "addressPrefix": "[parameters('hubAddressPrefix')]",
                "virtualWan": {
                    "id": "[resourceId('Microsoft.Network/virtualWans',parameters('vwanName'))]"
                }
            }
        },
        {
            "type": "Microsoft.Network/virtualHubs/hubVirtualNetworkConnections",
            "apiVersion": "2020-05-01",
            "name": "[format('{0}/{1}_connection', parameters('hubName'), parameters('commonVnetName'))]",
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualHubs', parameters('hubName'))]"
            ],
            "properties": {
                "remoteVirtualNetwork": {
                    "id": "[variables('commonVnetId')]"
                },
                "allowHubToRemoteVnetTransit": true,
                "allowRemoteVnetToUseHubVnetGateways": true,
                "enableInternetSecurity": true
            }
        }
    ],
    "outputs": {
      "vnetResourceId": {
        "type": "string",
        "value": "resourceId('Microsoft.Network/virtualNetwork', parameters('vnetName'))"
      }
    }
  }