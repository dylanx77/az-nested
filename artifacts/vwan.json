{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string",
      "metadata":{
        "description": "Specify the location for the resources."
      }
    },
    "vwanName": {
      "type": "string",
      "metadata": {
          "description": "Name of the Virtual Wan."
      }
    },
    "vwanSku": {
      "type": "string",
      "metadata": {
          "description": "Sku of the Virtual Wan."
      },
      "allowedValues": [
          "Standard",
          "Basic"
      ]
    },
    "hubName": {
      "type": "string",
      "metadata": {
          "description": "Name of the Virtual Hub. A virtual hub is created inside a virtual wan."
      }
    },
    "hubAddressPrefix": {
      "type": "string",
      "metadata": {
          "description": "The hub address prefix. This address prefix will be used as the address prefix for the hub vnet"
      }
    },
    "commonVnetResourceGroup": {
      "type": "string",
      "metadata": {
          "description": "Resource group that vnet will exist in"
      }
    },
    "commonVnetName": {
      "type": "string",
      "metadata": {
        "description": "VNet name"
      }
    },
    "commonVnetAddressPrefix": {
      "type": "string",
      "metadata": {
        "description": "Address prefix"
      }
    },
    "commonSubnet1Prefix": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Prefix"
      }
    },
    "commonSubnet1Name": {
      "type": "string",
      "metadata": {
        "description": "Subnet 1 Name"
      }
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2020-06-01",
      "name": "vnetCommonLinkedTemplate",
      "resourceGroup": "[parameters('commonVnetResourceGroup')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/dylanx77/az-nested/main/artifacts/vnetOneSubnet.json",
          "contentVersion":"1.0.0.0"
        },
        "parameters": {
          "vnetName": {
            "value": "[parameters('commonVnetName')]"
          },
          "vnetAddressPrefix": {
            "value": "[parameters('commonVnetAddressPrefix')]"
          },
          "subnet1Prefix": {
            "value": "[parameters('commonSubnet1Prefix')]"
          },
          "subnet1Name": {
            "value": "[parameters('commonSubnet1Name')]"
          },
          "location": {
            "value": "[parameters('location')]"
          }
        }
      }
    },
    {
      "type": "Microsoft.Network/virtualWans",
      "name": "[parameters('vwanName')]",
      "apiVersion": "2020-05-01",
      "location": "[parameters('location')]",
      "properties": {
          "type": "[parameters('vwanSku')]"
      }
    },
    {
        "type": "Microsoft.Network/virtualHubs",
        "name": "[parameters('hubName')]",
        "apiVersion": "2020-05-01",
        "location": "[parameters('location')]",
        "dependsOn": [
            "[resourceId('Microsoft.Network/virtualWans/', parameters('vwanName'))]"
        ],
        "properties": {
            "addressPrefix": "[parameters('hubAddressPrefix')]",
            "virtualWan": {
                "id": "[resourceId('Microsoft.Network/virtualWans',parameters('vwanName'))]"
            }
        }
    }
  ]
}