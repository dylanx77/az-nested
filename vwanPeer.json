{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vwanName": {
            "type": "string",
            "metadata": {
                "description": "VNet name"
            }
        },
        "vwanSku": {
            "type": "string",
            "metadata": {
                "description": "Address prefix"
            }
        },
        "hubName": {
            "type": "string",
            "metadata": {
                "description": "Subnet 1 Prefix"
            }
        },
        "hubAddressPrefix": {
            "type": "string",
            "metadata": {
                "description": "Subnet 1 Name"
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "commonSubscriptionId": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "commonVnetRgName": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            }
        },
        "commonVnetName": {
            "type": "string",
            "metadata": {
                "description": "Location for all resources."
            }
        }
    },
    "variables": {
        "commonVnetId": "[concat('subscriptions/', parameters('commonSubscriptionId'), '/resourceGroups/', parameters('commonVnetRgName'), '/providers/Microsoft.Network/virtualNetworks/', parameters('commonVnetName'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualHubs/hubVirtualNetworkConnections",
            "apiVersion": "2020-05-01",
            "name": "[concat(parameters('hubName'), '/', parameters('commonVnetName'))]",
            "dependsOn": [],
            "properties": {
                "remoteVirtualNetwork": {
                    "id": "[variables('commonVnetId')]"
                },
                "allowHubToRemoteVnetTransit": true,
                "allowRemoteVnetToUseHubVnetGateways": true,
                "enableInternetSecurity": true
            }
        }
    ],
    "outputs": {
      
    }
  }